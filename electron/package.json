{
  "name": "electron",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=14.15.4"
  },
  "workspaces": {
    "nohoist": [
      "**/electron",
      "**/electron/**",
      "**/jest",
      "**/jest/**"
    ]
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "watch": "electron .",
    "pack": "electron-builder --dir",
    "dist": "rimraf dist && electron-builder"
  },
  "build": {
    "appId": "electron",
    "mac": {
      "category": "your.app.category.type"
    }
  },
  "dependencies": {
    "concurrently": "^6.2.0",
    "electron-is-dev": "^1.1.0",
    "node-ipc": "^9.1.1",
    "sharp": "^0.28.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^15.6.1",
    "cpx": "^1.5.0",
    "electron": "^5.0.4",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "^3.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.2"
  }
}
